<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Background execution permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.START_FOREGROUND_SERVICES_FROM_BACKGROUND" />
    
    <!-- For Android 12+ background restrictions -->
    <uses-permission android:name="android.permission.HIGH_SAMPLING_RATE_SENSORS" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.TURN_SCREEN_ON" />

    <application
        android:name=".LLMApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.LLMAPP"
        android:requestLegacyExternalStorage="true"
        android:preserveLegacyExternalStorage="true"
        tools:targetApi="31">
        
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDYf6fLUWfosjXnrC6FXUO6Y6_cTOXHZU8" />
            <!-- Replace YOUR_ACTUAL_API_KEY_HERE with your Google Maps API key -->
            
        <activity android:name=".HomeActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".M1Activity" />
        <activity android:name=".TelegramLoginActivity" />
        <activity android:name=".PipelineActivity" />
        <activity 
            android:name=".EmailSearchActivity"
            android:label="Email Search"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".LlmPromptActivity"
            android:label="LLM Prompt Configuration"
            android:parentActivityName=".PipelineActivity" />
        <activity
            android:name=".TelegramToGmailActivity"
            android:exported="true"
            android:theme="@style/Theme.LLMAPP"
            android:label="Telegram to Gmail Pipeline" />
        <activity
            android:name=".TelegramConfigActivity"
            android:exported="false"
            android:theme="@style/Theme.LLMAPP"
            android:label="Configure Telegram Bot" />
        <activity
            android:name=".EmailConfigActivity"
            android:exported="false"
            android:theme="@style/Theme.LLMAPP"
            android:label="Configure Email" />
        <activity
            android:name=".TelegramPromptActivity"
            android:exported="false"
            android:theme="@style/Theme.LLMAPP"
            android:label="Configure LLM Prompt" />
        <activity
            android:name=".WorkflowListActivity"
            android:exported="false"
            android:theme="@style/Theme.LLMAPP"
            android:label="Your Workflows" />
        <activity
            android:name=".WorkflowCreateActivity"
            android:exported="false"
            android:theme="@style/Theme.LLMAPP"
            android:label="Create Workflow" />
        <activity
            android:name=".new_implementation.ui.NewWorkflowCreateActivity"
            android:exported="false"
            android:theme="@style/Theme.LLMAPP"
            android:label="Create Enhanced Workflow" />
        <activity
            android:name=".new_implementation.ui.NewWorkflowListActivity"
            android:exported="false"
            android:theme="@style/Theme.LLMAPP"
            android:label="Enhanced Workflows" />
            
        <activity
            android:name=".ui.BatteryOptimizationActivity"
            android:exported="false"
            android:theme="@style/Theme.LLMAPP"
            android:label="Battery Optimization Settings" />
            
        <activity
            android:name=".geofence.GeofenceActivity"
            android:exported="false"
            android:theme="@style/Theme.LLMAPP"
            android:label="Geofence Manager" />
            
        <!-- Background Services for Workflow Execution -->
        <service
            android:name=".service.WorkflowBackgroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            android:enabled="true"
            android:stopWithTask="false"
            android:process=":background" />
            
        <service
            android:name=".service.WorkflowSchedulerService"
            android:exported="false"
            android:enabled="true"
            android:stopWithTask="false" />
            
        <service
            android:name=".service.WorkflowWatchdogService"
            android:exported="false"
            android:enabled="true"
            android:stopWithTask="false" />
            
        <!-- Broadcast Receivers -->
        <receiver
            android:name=".receiver.BootCompletedReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        
        <receiver
            android:name=".receiver.AlarmReceiver"
            android:exported="false"
            android:enabled="true" />
            
        <!-- Keep-alive receiver for background execution -->
        <receiver
            android:name=".receiver.KeepAliveReceiver"
            android:exported="false"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        
        <!-- Geofence broadcast receiver -->
        <receiver
            android:name=".geofence.GeofenceBroadcastReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.example.llmapp.ACTION_GEOFENCE_EVENT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>