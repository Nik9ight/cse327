<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LLMAPPButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_gradient_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/playfair_display</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="backgroundTint">@null</item>
    </style>
    
    <style name="WelcomeTextStyle">
        <item name="android:textColor">@color/welcome_text_color</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/playfair_display</item>
    </style>
</resources>
