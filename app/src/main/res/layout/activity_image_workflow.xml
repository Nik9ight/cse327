<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_charcoal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤖 Image Workflow Setup"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure automatic image processing workflows"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Bot Token Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#333333"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔑 Bot Configuration"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/etBotToken"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_gradient_background"
                    android:hint="Enter Telegram Bot Token"
                    android:textColorHint="#888888"
                    android:textColor="@android:color/white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="textPassword"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnLoadChats"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_background_gradient_enhanced"
                        android:text="Load Chats"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Person Detection Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#333333"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Person Detection Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="👤 Person Detection"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                        
                    <Switch
                        android:id="@+id/switchPersonDetection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>

                <!-- Person Chat ID -->
                <!-- Chat Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💬 Select Chat"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />
                        
                <Spinner
                    android:id="@+id/spinnerPersonChat"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/app_background_gradient_enhanced"
                    android:layout_marginBottom="16dp"
                    android:enabled="false" />
                
                <!-- Reference Image Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📷 Reference Image (Optional)"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a reference image to detect only a specific person"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    
                    <Button
                        android:id="@+id/btnSelectReferenceImage"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/app_background_gradient_enhanced"
                        android:text="Select Image"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        android:enabled="false" />
                    
                    <Button
                        android:id="@+id/btnRemoveReferenceImage"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@drawable/button_gradient_background"
                        android:text="Remove"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                        
                </LinearLayout>
                
                <!-- Reference Image Preview -->
                <ImageView
                    android:id="@+id/ivReferenceImagePreview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/app_background_gradient_enhanced"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />
                
                <TextView
                    android:id="@+id/tvReferenceImageStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No reference image selected"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />
                
                <!-- Target Subject -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 Target Subject (Optional)"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />
                        
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundColor="#444444"
                    app:hintTextColor="@android:color/white">
                    
                    <EditText
                        android:id="@+id/etTargetSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Describe the person to detect"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA"
                        android:enabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Receipt Detection Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#333333"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Receipt Detection Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🧾 Receipt Detection"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                        
                    <Switch
                        android:id="@+id/switchReceiptDetection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>

                <!-- Receipt Chat ID -->
                <!-- Chat Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💬 Select Chat"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />
                    
                <Spinner
                    android:id="@+id/spinnerReceiptChat"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/app_background_gradient_enhanced"
                    android:layout_marginBottom="16dp"
                    android:enabled="false" />                <!-- Summary Time -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⏰ Daily Summary Time"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />
                        
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundColor="#444444"
                    app:hintTextColor="@android:color/white">
                    
                    <EditText
                        android:id="@+id/etReceiptSummaryTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="HH:MM format (e.g., 20:00)"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA"
                        android:enabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Service Status -->
        <TextView
            android:id="@+id/tvServiceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No workflows enabled"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💾 Save Configuration"
            android:layout_marginBottom="16dp"
            style="@style/LLMAPPButtonStyle" />

        <Button
            android:id="@+id/btnStartService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚀 Start Workflow Service"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50"
            style="@style/LLMAPPButtonStyle" />

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#333333">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ How it works"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📸 Monitors your camera folder for new photos\n\n👤 Person Detection: Forwards images with detected people to Telegram\n\n🧾 Receipt Detection: Extracts expense data and sends daily summaries\n\n🔄 Runs continuously in the background\n\n⚡ Uses ML Kit for fast and accurate analysis"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
