<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="32dp">

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to LLMAPP"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In with Google"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/enablePermissionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Permissions"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/telegramSetupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setup Telegram Bot"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/pipelineButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email to Telegram Pipeline"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/telegramToGmailButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telegram to Gmail Pipeline"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/m1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="M1"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/textImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="M2(Multimodal)"/>

</LinearLayout>
