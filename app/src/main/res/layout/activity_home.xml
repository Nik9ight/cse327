<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_charcoal">

    <!-- Exit Icon in top-right corner -->
    <ImageView
        android:id="@+id/exitIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_exit"
        android:background="@drawable/exit_icon_background"
        android:contentDescription="Exit App"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:layout_below="@id/exitIcon">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="48dp">

            <TextView
                android:id="@+id/homeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to LLMAPP"
                style="@style/WelcomeTextStyle"/>

            <ImageView
                android:id="@+id/blinkingDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/blinking_dot"/>

        </LinearLayout>

    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN IN WITH GOOGLE"
        style="@style/LLMAPPButtonStyle"/>

    <Button
        android:id="@+id/enablePermissionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENABLE PERMISSIONS"
        style="@style/LLMAPPButtonStyle"/>

    <Button
        android:id="@+id/pipelineButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIPELINES"
        android:drawableEnd="@drawable/dropdown_arrow_selector"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:visibility="gone"
        style="@style/LLMAPPButtonStyle"/>

    <Button
        android:id="@+id/workflowsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOUR WORKFLOWS"
        android:visibility="gone"
        style="@style/LLMAPPButtonStyle"/>

    <Button
        android:id="@+id/newWorkflowsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WORKFLOWS 2.0"
        android:drawableEnd="@drawable/dropdown_arrow_selector"
        android:drawablePadding="12dp"
        android:gravity="center"
        style="@style/LLMAPPButtonStyle"/>

        <Button
            android:id="@+id/geofenceButton"
            style="@style/LLMAPPButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="📍 GEOFENCE MANAGER" />

        <Button
            android:id="@+id/imageWorkflowButton"
            style="@style/LLMAPPButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="🤖 IMAGE WORKFLOWS" />

        <Button
            android:id="@+id/enhancedImageWorkflowButton"
            style="@style/LLMAPPButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="🚀 ENHANCED IMAGE WORKFLOWS" />

        <Button
            android:id="@+id/llmButton"
            style="@style/LLMAPPButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/dropdown_arrow_selector"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:text="LLM CHATS" />



    </LinearLayout>

</RelativeLayout>