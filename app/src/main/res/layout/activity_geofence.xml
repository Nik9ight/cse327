<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_charcoal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title with Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ“ Geofence Manager"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_preferences"
                android:contentDescription="Settings"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Map Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <!-- Location Button -->
        <Button
            android:id="@+id/btnCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Use Current Location"
            android:layout_marginBottom="16dp"
            style="@style/LLMAPPButtonStyle" />

        <!-- Geofence Form -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#333333">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add New Geofence"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <!-- Geofence Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundColor="#444444"
                    app:hintTextColor="@android:color/white">

                    <EditText
                        android:id="@+id/etGeofenceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Geofence Name (e.g., Home, Office)"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Radius -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundColor="#444444"
                    app:hintTextColor="@android:color/white">

                    <EditText
                        android:id="@+id/etRadius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Radius (meters)"
                        android:inputType="number"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Enter Message -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundColor="#444444"
                    app:hintTextColor="@android:color/white">

                    <EditText
                        android:id="@+id/etEnterMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Message when entering area"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Enable Exit Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable exit notifications"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical" />

                    <Switch
                        android:id="@+id/switchEnableExit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Exit Message -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="#444444"
                    app:hintTextColor="@android:color/white">

                    <EditText
                        android:id="@+id/etExitMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Message when leaving area"
                        android:enabled="false"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Chat ID -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="#444444"
                    app:hintTextColor="@android:color/white">

                    <EditText
                        android:id="@+id/etChatId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textColorHint="#AAAAAA" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Add Button -->
                <Button
                    android:id="@+id/btnAddGeofence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âž• Add Geofence"
                    style="@style/LLMAPPButtonStyle" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Geofence List -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#333333">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="500dp"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active Geofences"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/lvGeofences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="#555555"
                        android:showDividers="middle"
                        android:dividerHeight="1dp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
