<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enhanced Image Workflow"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Workflow Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workflow Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/workflowNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter workflow name"
            android:layout_marginBottom="24dp"
            android:inputType="text" />

        <!-- Person Forwarding Section -->
        <CheckBox
            android:id="@+id/personForwardingCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Person Forwarding"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/personForwardingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/section_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forward images of matching persons via Telegram/Gmail"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/notifyNonMatchingCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Also notify for non-matching persons"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Document Analysis Section -->
        <CheckBox
            android:id="@+id/documentAnalysisCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Document Analysis"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/documentAnalysisSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/section_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Analyze documents with LLM and generate reports"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document Type:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/documentTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/immediateAnalysisCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send immediate analysis (don't wait for daily summary)"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Daily Summary Section -->
        <CheckBox
            android:id="@+id/dailySummaryCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Daily Summary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/dailySummarySection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/section_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate and send daily summary of analyzed documents"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary Time:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/summaryTimeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HH:MM (e.g., 18:00)"
                android:text="18:00"
                android:inputType="time"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/clearAfterSummaryCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear analyses after sending summary"
                android:textSize="14sp"
                android:checked="true" />

        </LinearLayout>

        <!-- Communication Settings -->
        <TextView
            android:id="@+id/communicationLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Communication Settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/communicationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="12dp"
            android:background="@drawable/section_background"
            android:layout_marginBottom="24dp">

            <CheckBox
                android:id="@+id/telegramCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send via Telegram"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/gmailCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send via Gmail"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/gmailSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginStart="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gmail Recipient:"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/gmailRecipientEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="recipient@example.com"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:layout_marginEnd="8dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:id="@+id/testButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Test"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.AppCompat.Button.Colored" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:layout_marginStart="8dp"
                style="@style/Widget.AppCompat.Button.Colored" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
